<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @book.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @book.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isbn) %>:</strong></dt>
  <dd><%= @book.isbn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cover) %>:</strong></dt>
  <dd><%= image_tag @book.cover %></dd>
</dl>

<% if User.is_admin? current_user %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
                books_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_book_path(@book), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                book_path(@book),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% else %>
  <%= link_to t('.NuevoComentario', :default => t("helpers.links.NuevoComentario")),
                new_book_review_path(@book), :class => 'btn btn-default' %>

<% end %>

<% unless @reviews.blank? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:comment) %></th>
        <th><%= model_class.human_attribute_name(:score) %></th>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.comment %></td>
          <td><%= review.score %></td>
          <td><%= review.user.email %></td>
          <td><%=l review.created_at, format: :short %></td>
            <td>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          book_review_path(@book, review),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :method => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' if (User.is_admin? current_user) %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_book_review_path(@book, review), :class => 'btn btn-default btn-xs' if Review.my_review?(current_user.id, review) %>
              </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>